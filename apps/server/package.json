{
  "name": "big-grain-nest",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "dev": "dotenv -e .env.development -- cross-env NODE_ENV=development nest start --watch",
    "start:dev": "dotenv -e .env.development -- cross-env NODE_ENV=development nest start --watch",
    "start": "dotenv -e .env.production -- cross-env NODE_ENV=production nest start",
    "start:debug": "dotenv -e .env.development -- cross-env NODE_ENV=development nest start --debug --watch",
    "start:prod": "dotenv -e .env.production -- cross-env NODE_ENV=production node dist/main",
    "deploy": "./deploy.sh",
    "prisma:push": "dotenv -e .env.development -- cross-env NODE_ENV=development npx prisma db push",
    "prisma:generate:development": "dotenv -e .env.development -- cross-env NODE_ENV=development npx prisma generate",
    "prisma:studio": "dotenv -e .env.development -- cross-env NODE_ENV=development npx prisma studio",
    "prisma:migrate:dev": "dotenv -e .env.development -- cross-env NODE_ENV=development npx prisma migrate dev",
    "prisma:reset": "dotenv -e .env.development -- cross-env NODE_ENV=development npx prisma migrate reset",
    "prisma:migrate:deploy:production": "dotenv -e .env.production -- cross-env NODE_ENV=production npx prisma migrate deploy",
    "prisma:generate:production": "dotenv -e .env.production -- cross-env NODE_ENV=production npx prisma generate",
    "prisma:migrate:deploy:development": "dotenv -e .env.development -- cross-env NODE_ENV=development npx prisma migrate deploy"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^11.2.0",
    "@prisma/client": "^6.11.0",
    "@repo/ui": "*",
    "@telegram-apps/init-data-node": "^2.0.10",
    "@types/joi": "^17.2.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^17.2.1",
    "joi": "^17.13.3",
    "nest-winston": "^1.10.2",
    "nestjs-prisma": "^0.25.0",
    "nestjs-telegraf": "^2.9.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "telegraf": "^4.16.3",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^10.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "prisma": "^6.11.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
